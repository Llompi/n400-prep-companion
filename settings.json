{
  "$schema": "https://schemas.anthropic.com/claude-code/settings.json",
  "allowedCommands": [
    "npm install",
    "npm run dev",
    "npm run build",
    "npm run lint",
    "npm run type-check",
    "npm run test:unit",
    "npm run test:e2e",
    "npm test",
    "git status",
    "git diff",
    "git log"
  ],
  "blockedCommands": [
    "rm -rf",
    "rm -f",
    "sudo",
    "chmod +x",
    "npm publish",
    "git push --force"
  ],
  "autoApprovePatterns": [
    "npm run lint",
    "npm run type-check",
    "npm test",
    "git status",
    "git diff"
  ],
  "browserTestingEnabled": true,
  "verificationLoopEnabled": true,
  "contextManagement": {
    "autoIncludePackageJson": true,
    "autoIncludeTsConfig": true,
    "focusOnSingleFeature": true,
    "maxFilesInContext": 20
  },
  "workflowPreferences": {
    "usePlanModeForMajorChanges": true,
    "testBeforeCommit": true,
    "incrementalDevelopment": true
  },
  "safetyChecks": {
    "preventDataStructureBreaks": true,
    "requireOfflineCompatibility": true,
    "checkAccessibility": true,
    "validateTypeScript": true
  }
}
